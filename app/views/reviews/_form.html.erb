<%= form_with(model: [movie, review]) do |f|%>

    <%= render "shared/errors", object: review %>

    <div class="legend">Stars</div>
    <%= f.collection_radio_buttons :stars,
                                Review::STARS,
                                :itself,
                                :itself do |b| %>
        <span class="star">
            <%= b.radio_button %>
            <%= b.label %>
        </span>
    <% end %>

    <%= f.label :comment %>
    <%= f.text_area :comment, rows: 7,  placeholder: "What did you think?" %>

    <%= f.submit "Post Review"%>
<% end %>